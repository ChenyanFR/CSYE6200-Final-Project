<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController"
      alignment="CENTER" spacing="10" prefWidth="300" prefHeight="200"
      stylesheets="@login.css">

    <Label text="Login" />

    <TextField fx:id="usernameField" promptText="Username">
        <VBox.margin>
            <Insets left="30" right="30"/>
        </VBox.margin>
    </TextField>

    <PasswordField fx:id="passwordField" promptText="Password">
        <VBox.margin>
            <Insets left="30" right="30"/>
        </VBox.margin>
    </PasswordField>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin" />
        <Button text="Sign Up" onAction="#handleSignupRedirect" />
    </HBox>

</VBox>

