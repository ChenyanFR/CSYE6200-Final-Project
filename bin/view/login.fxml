<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1000" prefWidth="600" spacing="10" stylesheets="@login.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.LoginController">

    <Label alignment="CENTER" prefHeight="106.0" prefWidth="221.0" text="Welcome to ThriftHive" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" />
    <TextField fx:id="usernameField" prefHeight="35.0" prefWidth="100.0" promptText="Username">
        <VBox.margin>
            <Insets left="50.0" right="50.0" top="30.0" />
        </VBox.margin>
    </TextField>
	
    <PasswordField fx:id="passwordField" promptText="Password">
        <VBox.margin>
            <Insets bottom="30.0" left="50.0" right="50.0" />
        </VBox.margin>
    </PasswordField>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleLogin" text="Login" />
        <Button onAction="#handleSignupRedirect" text="Sign Up" />
    </HBox>

</VBox>
