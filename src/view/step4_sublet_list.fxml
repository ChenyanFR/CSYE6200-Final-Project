<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="1000" prefWidth="600" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.Step4SubletController">

	<HBox style="-fx-background-color: #4568dc; -fx-padding: 10px; -fx-alignment: center-left; -fx-spacing: 10;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="ThriftHive" />
        <Label HBox.hgrow="ALWAYS" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Home" />
    </HBox>
    
    <VBox alignment="TOP_CENTER" spacing="10" VBox.vgrow="ALWAYS">
    <Label text="Available Sublets">
      <font>
         <Font size="24.0" />
      </font></Label>
    
	<HBox alignment="CENTER" spacing="10">
    <ComboBox fx:id="locationFilter" promptText="Filter by Location" />
    <TextField fx:id="priceFilter" alignment="CENTER" promptText="Max Price" />
	</HBox>
	
    <TableView fx:id="tableView" prefHeight="599.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="120" text="Title" />
            <TableColumn fx:id="locationColumn" prefWidth="100" text="Location" />
            <TableColumn fx:id="priceColumn" prefWidth="70" text="Price" />
            <TableColumn fx:id="descriptionColumn" prefWidth="200" text="Description" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleApply" text="Apply" />
        <Button onAction="#handleBack" text="Back" />
    </HBox>
    </VBox>
</VBox>
