<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.Step4Controller"
      alignment="CENTER" spacing="15" prefWidth="600" prefHeight="1000"
      stylesheets="@login.css">

	<HBox style="-fx-background-color: #4568dc; -fx-padding: 10px; -fx-alignment: center-left; -fx-spacing: 10;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="ThriftHive" />
        <Label HBox.hgrow="ALWAYS" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Home" />
    </HBox>
    
    <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
    <Label text="Register your place" />
    
    <TextField fx:id="titleField" promptText="Title" />
    
    <Label text="Upload 1 photo" />
    <Button text="Upload Image" onAction="#handleUpload" />
    <Label fx:id="uploadPathLabel" />

    <TextArea fx:id="descArea" promptText="Introduce your place" />
    
    <TextField promptText="Number of roommates" />
    <CheckBox text="Credit check required" />
    <CheckBox text="Women only" />
    <CheckBox text="Allow party?" />
    <CheckBox text="Allow guests?" />
    <TextField promptText="Duration (e.g. 4 months)" />

    <Button text="Complete" onAction="#handleComplete" />
    <Button text="Back" onAction="#handleBack" />
    </VBox>
</VBox>
