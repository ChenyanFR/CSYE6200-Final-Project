<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.Step4Controller"
      alignment="CENTER" spacing="15" prefWidth="600" prefHeight="800"
      stylesheets="@login.css">

	<fx:include source="header.fxml" />
    
    <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
    <Label text="Register your place" />
    
    <TextField fx:id="titleField" promptText="Title" maxWidth="400"/>
    
    <Label text="Upload 1 photo" />
    <Button text="Upload Image" onAction="#handleUpload" />
    <Label fx:id="uploadPathLabel" maxWidth="400" />

    <TextArea fx:id="descArea" promptText="Introduce your place" maxWidth="400"/>
    
    <TextField promptText="Number of roommates" maxWidth="400"/>
    <CheckBox text="Credit check required" />
    <CheckBox text="Women only" />
    <CheckBox text="Allow party?" />
    <CheckBox text="Allow guests?" />
    <TextField promptText="Duration (e.g. 4 months)" maxWidth="400"/>
 	
    <HBox spacing="15" alignment="CENTER">
        <Button text="Complete" onAction="#handleComplete" />
        <Button text="Back" onAction="#handleBack" />
    </HBox>
 	   
    </VBox>
</VBox>
