<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ApplyController"
      alignment="CENTER" spacing="20" prefWidth="600" prefHeight="1000">

    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="locationLabel" />
    <Label fx:id="priceLabel" />
    <Label fx:id="descriptionLabel" wrapText="true" />
    
    <TextField fx:id="nameField" promptText="Your Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="phoneField" promptText="Phone Number" />

    <CheckBox fx:id="creditCheckBox" text="I have a credit history" onAction="#handleCreditCheck" />
    
    <VBox fx:id="creditNoticeBox" spacing="5" visible="false">
        <Label text="As you do not have credit, you must prepay 50% of the deposit over the contract period." wrapText="true" />
        <Label text="Payment must be made via credit card." wrapText="true" />
    </VBox>
    
    <CheckBox fx:id="agreeCheckBox" text="I agree to the above terms and conditions." />
    

    <Button text="Confirm Apply" onAction="#handleConfirm" />
    <Button text="Back" onAction="#handleBack" />
</VBox>
