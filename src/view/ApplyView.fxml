<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1000" prefWidth="600" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ApplyController">

	<HBox style="-fx-background-color: #4568dc; -fx-padding: 10px; -fx-alignment: center-left; -fx-spacing: 10;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="ThriftHive" />
        <Label HBox.hgrow="ALWAYS" />
        <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Home" />
    </HBox>
    
    <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="locationLabel" />
    <Label fx:id="priceLabel" />
    <Label fx:id="descriptionLabel" wrapText="true" />
    
    <TextField fx:id="nameField" alignment="CENTER" promptText="Your Name">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin></TextField>
    <TextField fx:id="emailField" alignment="CENTER" promptText="Email">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin></TextField>
    <TextField fx:id="phoneField" alignment="CENTER" promptText="Phone Number">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin></TextField>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <CheckBox fx:id="creditCheckBox1" onAction="#handleCreditCheck" text="I have a credit history">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </CheckBox>
      
          <CheckBox fx:id="creditCheckBox" onAction="#handleCreditCheck" text="I don't have a credit history" />
      </children>
   </HBox>
    
    <VBox fx:id="creditNoticeBox" spacing="5" visible="false">
        <Label text="As you do not have credit, you must prepay 50% of the deposit over the contract period." wrapText="true" />
        <Label text="Payment must be made via credit card." wrapText="true" />
    </VBox>
    
    <CheckBox fx:id="agreeCheckBox" text="I agree to the above terms and conditions." />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
          
      
          <Button contentDisplay="CENTER" onAction="#handleConfirm" prefHeight="25.0" prefWidth="98.0" text="Confirm Apply">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Button>
          <Button onAction="#handleBack" text="Back" />
      </children>
   </HBox>
   </VBox>
</VBox>
